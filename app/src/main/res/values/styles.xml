<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="RadioButton_Nav">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@drawable/bottom_nav_text_color</item>
        <item name="android:textSize">@dimen/Bottom_Nav_Text_Size</item>
    </style>

    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">

        <!--&lt;!&ndash; 弹出层背景颜色 &ndash;&gt;-->
        <!--<item name="android:popupBackground">@color/grgray</item>-->

        <!--&lt;!&ndash; 是否覆盖锚点，默认为true，即盖住Toolbar &ndash;&gt;-->
        <item name="overlapAnchor">false</item>

        <!--水平上距离边界的距离-->
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <!--树枝上距离边界的距离-->
        <item name="android:dropDownVerticalOffset">5dp</item>

        <!--&lt;!&ndash; 设置弹出菜单文字颜色 &ndash;&gt;-->
        <item name="android:textColor">#000000</item>

    </style>
</resources>
