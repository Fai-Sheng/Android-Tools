<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/section_margin"
        android:layout_marginRight="@dimen/section_margin"
        android:text="我们的这个周末如何？"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/subTitle"
            android:textSize="10sp"
            android:text="作者："
            android:layout_marginTop="@dimen/section_margin"
            android:layout_marginLeft="@dimen/section_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/subTitle_author"
            android:text="树上春树"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/section_margin"
            android:layout_marginLeft="@dimen/section_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ImageView
        android:id="@+id/section_img"
        android:layout_margin="@dimen/section_margin"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="155dp" />

</LinearLayout>